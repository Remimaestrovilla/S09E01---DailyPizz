<!-- Je part chercher le code factorisé pour le header dans la mesure où il sera le même pour toutes les pages du site -->

<%- include ("partials/header") %>

<p class="main__description">Une petite soif ? Cliquez sur une vignette pour obtenir toutes les
    informations !</p>

<main class="main__pizza">

    <!-- Je vais boucler sur toutes les boissons, je réalise donc une boucle en utilisant la syntaxe EJS -->

        <% for (const beverage of beverages) { %>

        <a href="/beverages/<%= beverage.id %>"><img src="<%= beverage.img %>" class="main__products__img"></a>

        <% } %>

</main>

<!-- Le footer risque lui aussi de beaucoup se répéter, du coup on le factorise et on le déplace dans un partial -->

<!-- Bien évidemment, il faut quand même le mentionner ici, je le fais -->

<%- include ("partials/footer") %>