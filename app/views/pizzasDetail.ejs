<!-- Je part chercher le code factorisé pour le header dans la mesure où il sera le même pour toutes les pages du site -->

<%- include ("partials/header") %>

<p class="main__description"> Vous êtes intéressé par la pizza <%= pizzas.name %> ? La DailyPizz va tout vous dire !</p>

<main class="main__pizza">

        <img src="<%= pizzas.img %>" class="main__products__img">

</main>

<section class="product__informations">

        <p class="product__price"><%= pizzas.price %> euros </p>

</section>

<section class="product__informations__two">

        <p class="product__topping"><%= pizzas.topping %></p>

</section>

<section class="product_informations_three">

        <p class="product__description"><%= pizzas.description %></p>

</section>

<!-- Le footer risque lui aussi de beaucoup se répéter, du coup on le factorise et on le déplace dans un partial -->

<!-- Bien évidemment, il faut quand même le mentionner ici, je le fais -->

<%- include ("partials/footer") %>