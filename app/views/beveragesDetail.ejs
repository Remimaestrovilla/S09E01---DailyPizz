<!-- Je part chercher le code factorisé pour le header dans la mesure où il sera le même pour toutes les pages du site -->

<%- include ("partials/header") %>

<p class="main__description"> Vous êtes intéressé par la boisson <%= beverages.name %> ? La DailyPizz va tout vous dire !</p>

<main class="main__pizza">

        <img src="<%= beverages.img %>" class="main__products__img">

</main>

<section class="product__informations">

        <p class="product__price"><%= beverages.price %> euros </p>

</section>

<section class="product__informations__two">

        <p class="product__topping"><%= beverages.topping %></p>

</section>

<section class="product_informations_three">

        <p class="product__description"><%= beverages.description %></p>

</section>

<!-- Le footer risque lui aussi de beaucoup se répéter, du coup on le factorise et on le déplace dans un partial -->

